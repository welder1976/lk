$(document).ready(function(){$(document).on('click','#ru',function(e){var date=new Date(new Date().getTime()+60*60*365*1000);document.cookie='lang=ru; path=/; expires='+date.toUTCString()+';secure';location.reload();});$(document).on('click','#en',function(e){var date=new Date(new Date().getTime()+60*60*365*1000);document.cookie='lang=en; path=/; expires='+date.toUTCString()+';secure';location.reload();});});